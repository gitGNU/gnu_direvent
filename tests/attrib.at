AT_SETUP([Attrib])
AT_KEYWORDS([attrib])

AT_CHECK([
cwd=`pwd`
pidfile=$cwd/dircond.pid
outfile=$cwd/dump
mkdir dir
cat > test.conf <<EOT
pidfile $pidfile;
debug 10;
syslog {
	facility ${TESTSUITE_FACILITY:-local0};
	tag dircond-test:attrib;
}
watcher {
	path $cwd/dir;
	event attrib;
	command "$TESTDIR/envdump -s -i DIRCOND_FILE=:DIRCOND_GENEV_ -f $outfile";
	option (stdout,stderr);
}
EOT

> dir/file
chmod 600 dir/file

dircond -lnotice test.conf || exit 1

chmod 644 dir/file

waitfile $outfile 6 || exit 2
kill `cat $pidfile`
sed "s^$cwd^(CWD)^;s^$TESTDIR^(TESTDIR)^" $outfile
],
[0],
[# Dump of execution environment
cwd is (CWD)/dir
# Arguments
argv[[0]]=(TESTDIR)/envdump
argv[[1]]=-s
argv[[2]]=-i
argv[[3]]=DIRCOND_FILE=:DIRCOND_GENEV_
argv[[4]]=-f
argv[[5]]=(CWD)/dump
# Environment
DIRCOND_FILE=file
DIRCOND_GENEV_CODE=4
DIRCOND_GENEV_NAME=attrib
# End
])

AT_CLEANUP
