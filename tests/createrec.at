AT_SETUP([Create recursive])
AT_KEYWORDS([create createrec])

AT_CHECK([
cwd=`pwd -P`
pidfile=$cwd/direvent.pid
outfile=$cwd/dump
mkdir dir
#sleep 1
mkdir a
mkdir a/b
mkdir a/b/c
> a/af
> a/af1
> a/b/bf

cat > test.conf <<EOT
pidfile $pidfile;
debug 10;
syslog {
	facility ${TESTSUITE_FACILITY:-local0};
	tag direvent-test:create-recursive;
}
watcher {
	path $cwd/dir recursive;
	event create;
	command "$SRCDIR/printname $outfile";
	option (stdout,stderr);
}
EOT

direvent -lnotice test.conf || exit 1
waitfile $pidfile 2
cp -r a dir
waitfile $outfile 6
kill `cat $pidfile`

sed "s^$cwd^(CWD)^;s^$TESTDIR^(TESTDIR)^" $outfile | sort
],
[0],
[(CWD)/dir/a
(CWD)/dir/a/af
(CWD)/dir/a/af1
(CWD)/dir/a/b
(CWD)/dir/a/b/bf
(CWD)/dir/a/b/c
])

AT_CLEANUP
